<div class="registration-header">

  <button class="back-btn" (click)="prevStep()" *ngIf="step > 1">‚Üê Back</button>

  <div class="stepper">
    <div class="step-info">
      Step {{ step }} of 3
    </div>


    <div class="progress-bar">
      <div class="progress" [style.width.%]="step * 33"></div>
    </div>

    <div class="step-labels">
      <span [class.active]="step === 1">1 Basic Info</span>
      <span [class.active]="step === 2">2 Categories</span>
      <span [class.active]="step === 3">3 Services</span>
    </div>
  </div>

  <div class="completion-text">
    {{ step * 33 }}% Complete
  </div>

</div>




.registration-header {
  display: flex;
